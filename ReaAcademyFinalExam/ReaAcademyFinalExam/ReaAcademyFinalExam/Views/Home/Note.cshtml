@model IEnumerable<ReaAcademyFinalExam.Models.Notes>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Note Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.noteID</td>
                <td>@item.noteName</td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.noteID" asp-action="DeleteNotes">Delete Note</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="/Home/AddNotes">
    <div class="form-group">
        <input type="text" name="noteName" class="form-control" placeholder="Note Title"/>
    </div>
    <div class="form-group">
        <input type="text" name="noteContent" class="form-control" placeholder="Note Content"/>
    </div>
        <button type="submit" class="btn btn-primary">Add Note</button>
</form>