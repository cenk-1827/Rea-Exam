@model IEnumerable<ReaAcademyFinalExam.Models.Tags>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tag Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.tagID</td>
                <td>@item.tagName</td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.tagID" asp-action="DeleteTags">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="/Home/AddTags">
    <div class="form-group">
        <input type="hidden" name="tagID" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" name="tagName" class="form-control" placeholder="Write a Tag Name" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Tag</button>
    </div>
</form>